# ─── X / Twitter OAuth 1.0a credentials ────────────────────────────────
TWITTER_APP_KEY=
TWITTER_APP_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ─── Account to mirror ────────────────────────────────────────────────
TARGET_USERNAME=        # without the leading @

# ─── Nitter instance that supports RSS ────────────────────────────────
NITTER_BASE=https://nitter.privacyredirect.com

# ─── Optional settings ────────────────────────────────────────────────
INCLUDE_REPLIES=false   # true/1/yes/on to mirror replies
BACK_FILL=4             # how many missed items to fill since our last run
